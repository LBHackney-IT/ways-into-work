$.fn.handleMaps = function() {

  if (this.length === 0) { return false; }

  var hubs = $(this).find('.hub');
  var map, lat, lng, hub_map;

  L.mapbox.accessToken = '<%= ENV['MAPBOX_ACCESS_TOKEN'] %>';

  hubs.each(function() {
    map = $(this).find('.map');

    lat = map.data('lat');
    lng = map.data('lng');
    hub_map = L.mapbox.map(map.attr('id'), 'mapbox.streets').setView([lat, lng], 15);

    hub_map.featureLayer.setGeoJSON(
      [{
        type: 'Feature',
        geometry: {
          type: 'Point',
          coordinates: [lng, lat]
        },
        properties: {
          name: map.data('name'),
          address: map.data('street'),
          'marker-color': '#00607d',
          'marker-symbol': 'circle',
          'marker-size': 'medium'
        }
      }]
    );
  })

  if (map.scrollWheelZoom) {
    map.scrollWheelZoom.disable();
  }
};
