= simple_form_for [@client] do |form|
  %fieldset
    =form.input :title, as: :select, collection: TitleOption.all, prompt: "Please select"
    =form.input :first_name, as: :string
    =form.input :last_name, as: :string

  %fieldset
    =form.input :phone, as: :string
    =form.input :address_line_1, as: :string
    =form.input :address_line_2, as: :string
    =form.input :address_line_3, as: :string
    =form.input :postcode, as: :string

  %fieldset
    =form.input :date_of_birth, as: :date, start_year: Date.today.year - 70, end_year: Date.today.year - 14

  %fieldset
    =form.input :employment_status, as: :select, collection: EmploymentStatusOption.all, prompt: "Please select"
    =form.input :benefits_status, as: :select, collection: BenefitsStatusOption.all, prompt: "Please select"

  = form.submit

