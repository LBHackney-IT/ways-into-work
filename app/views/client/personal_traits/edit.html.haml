.container.content.columns
  .column.is-10.is-offset-1
    %h2.subtitle Tell us a little about yourself

    = simple_form_for [current_client], url: :client_personal_traits do |form|
      .convert_checkbox
        =form.input :personal_traits, as: :check_boxes, collection: PersonalTraitOption.all, :label => 'What would you say best describes you?'

        = render partial: 'shared/other_text', locals: {form: form, field: :other_personal_trait}

      .actions
        = form.submit 'Next', :class => 'button is-primary'

