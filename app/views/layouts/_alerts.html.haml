- flash.each do |name, msg|
  - next unless msg.is_a?(String) && msg.present?
  #alerts
    .container
      .columns
        .column
          = content_tag :div, msg, :id => "flash_#{name}"
          #alert_close
            =fa_icon "times"

    /     %div{:class => "alert notification alert-#{name} animated slideInDown"}
    /       %button.delete
    /       .container
    /         = content_tag :div, msg, :id => "flash_#{name}"

