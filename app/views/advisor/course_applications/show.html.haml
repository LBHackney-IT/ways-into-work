%section
  .head.level
    .level-left
      %h2 Application
    .level-right
      = link_to "Back", advisor_course_applications_path, class: 'button pull-right top_right_button'
  %hr

  .box
    %p
      %span.bold Applicant:
      = "#{@course_application.first_name} #{@course_application.last_name}"
    %p
      %span.bold Email:
      = @course_application.email
    %p
      %span.bold Phone number:
      = @course_application.phone_number

  .box
    %p
      %span.bold Course:
      = link_to @course["post_title"], @intake["link"]
    %p
      %span.bold Intake:
      = "#{@intake["acf"]["start_date"]} â€” #{@intake["acf"]["end_date"]}"
    
    %p
      %span.bold Accepted applications:
      = "#{@course_application.accepted_applications} / #{@intake["acf"]["total_capacity"]}"
      %meter{ value: @course_application.accepted_applications, 
              optimum: 0,
              low: @intake["acf"]["total_capacity"].to_i*0.66,
              high: @intake["acf"]["total_capacity"],  
              max: @intake["acf"]["total_capacity"]+ ".1"}

    %p
      %span.bold Total applications:
      = "#{@course_application.total_applications} / #{@intake["acf"]["total_capacity"]}"
      %meter{ value: @course_application.total_applications, 
              optimum: 0,
              low: @intake["acf"]["total_capacity"].to_i*0.66,
              high: @intake["acf"]["total_capacity"],  
              max: @intake["acf"]["total_capacity"]+ ".1"}

  .box
    = simple_form_for @course_application, url: advisor_course_application_path, method: :put, local: true do |form|
      .convert_radio
        = form.input :status, as: :radio_buttons, label: "Were they accepted?", collection: [['Yes', 'accepted'], ['No', 'unsuccessful']]
      %br
      = form.input :feedback, as: :text, input_html: { class: 'textarea' }
      = form.submit "Submit", :class => 'button is-primary tablet_cta'


