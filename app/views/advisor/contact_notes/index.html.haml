%section
  .head.level
    .level-left
      %h2="#{client.first_name}'s Contact Timeline"
    .level-right.home.single
      =button_to I18n.t('clients.buttons.new_contact_note'), new_advisor_client_contact_note_path, method: :get, class: "button is-primary"


  = render partial: 'shared/upper_tabs', locals: {the_client: client}

  .profile-tab.top-right-corner
    - if client.contact_notes.any?
      %table.table
        %thead
          %tr.note
            %th Advisor
            %th Date
            %th Method
            %th Notes
            %th
        %tbody
          = render partial: 'contact_note', collection: client.contact_notes
    - else
      %p="#{client.first_name} doesn't have any contact notes yet"

      =button_to I18n.t('clients.buttons.new_contact_note'), new_advisor_client_contact_note_path, method: :get, class: "button is-primary"
