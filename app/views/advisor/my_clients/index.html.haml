#your_clients.column.is-10.is-offset-1
  .head.columns.level
    .level-left.column
      %h2 Your Clients
      %span.client_total="#{@clients.count} Total"

  -if @clients.any?
    %table.table
      %thead
        %tr
          %th Client
          %th Age
          %th Date Created
          %th
      %tbody
        = render partial: 'client', collection: @clients
  - else
    %h4=I18n.t('advisors.headers.no_clients')
    =link_to I18n.t('buttons.all_clients'), :advisor_clients
