%tr{'data-id': vacancy.id ,'data-title': vacancy.title, 'data-vacancy-type': t("vacancies.vacancy_type.#{vacancy.vacancy_type}"), 'data-salary': vacancy.salary, 'data-description': vacancy.description, class: (vacancy.featured_vacancy.nil? ? '' : 'is-hidden'), id: "vacancy_#{vacancy.id}" }
  %td= link_to vacancy.title, edit_advisor_vacancy_path(vacancy)
  %td= t("vacancies.vacancy_type.#{vacancy.vacancy_type}")
  %td= vacancy.salary
  %td
    = link_to 'Edit', edit_advisor_vacancy_path(vacancy), class: 'button is-primary is-small'
