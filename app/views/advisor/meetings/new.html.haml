%section
  .head.level
    .level-left
      %h3.subtitle New Meeting
    .level-right
      =link_to I18n.t('clients.buttons.back_to_meetings'), advisor_client_meetings_path, class: 'button pull-right top_right_button'
  %hr

  = simple_form_for [client, meeting], url: advisor_client_meetings_path(client_id: client.id) do |form|

    = render partial: 'form_fields', locals: {form: form}

    .control
      = form.submit I18n.t('clients.buttons.save'), :class => 'button is-primary tablet_cta'
