%section
  .head.level
    .level-left
      %h2="#{client.first_name}'s Enquiries"

  = render partial: 'shared/upper_tabs', locals: {the_client: client}

  .profile-tab.top-right-corner
    - if client.enquiries.count > 0
      %table
        %tr
          %th
            Client
          %th
            Applied on
          %th
            Status
          %th
            Feedback
        - client.enquiries.each do |enquiry|
          %tr
            %td
              = enquiry.opportunity.title
            %td
              = enquiry.created_at.strftime("%e %B %Y")
            %td
              = enquiry.status
            %td
              = link_to "Review enquiry", advisor_opportunity_enquiry_path(@opportunity, enquiry), class: 'button is-primary is-small'
    - else
      %p="No enquires have been made by #{client.first_name} yet."
