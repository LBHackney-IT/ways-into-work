%section
  .head.level
    .level-left
      %h2= "Edit External Apprenticeship"

  %hr

  .opportunity_form
    = simple_form_for @external_apprenticeship, url: advisor_external_apprenticeship_path, local: true, method: :put do |f|
      = f.input :title, :input_html => { :class => 'input' }
      = f.input :closing_date, as: :string, label: 'Closing date', input_html: {type: :date, class: 'input date_input', value: f.object.try(:closing_date).try(:to_date)}, placeholder: "dd/mm/yyyy"
      = f.input :short_description, as: :text, label: 'Short description (max 250 characters)', input_html: { class: 'textarea', :maxlength => 250 }
      = f.input :pay, label: 'Pay', :input_html => { :class => 'input' }
      = f.input :location, label: 'Location', :input_html => { :class => 'input' }
      = f.input :contract, label: 'Contract', :input_html => { :class => 'input' }
      = f.input :sector, label: 'Sector', :input_html => { :class => 'input' }
      = f.input :qualification, label: 'Qualification/Level', :input_html => { :class => 'input' }
      = f.input :full_description, as: :text, input_html: { class: 'textarea' }
      = f.submit "Update external apprenticeship", :class => 'button is-primary tablet_cta'
