%section
  .head.level
    .level-left
      %h2= "Edit training course"
  %hr

  .opportunity_form
    = simple_form_for @training, url: advisor_training_path, local: true, method: :put do |f|
      = render partial: 'advisor/opportunities/shared_form_fields', locals: {f: f}
      = render partial: 'shared_fields', locals: {f: f}
      = f.submit "Update training", :class => 'button is-primary tablet_cta'
