#tabs.container
  .column
    .head.level
      %h3 Dashboard
    
    = form_tag nil, method: :get do
      .tile.is-ancestor
        .tile.is-vertical.is-parent.is-12
          .tile.is-child.box
            .columns.is-multiline
              .column
                %label.label Hub
                %span.select.is-fullwidth
                  = select_tag(:hub, options_for_select(@hubs, @hub), { include_blank: '- All -', id: 'dashboard_hubs' })

              .column
                %label.label Advisor
                %span.select.is-fullwidth
                  = select_tag(:advisor, options_for_select(@advisors, @advisor), { include_blank: '- All -' })
              
              .column
                %label.label Month / Quarter
                %span.select.is-fullwidth
                  = select_tag(:month, grouped_options_for_select(@months, @month))

              .column
                %label.label Year
                %span.select.is-fullwidth
                  = select_tag(:year, options_for_select(@years, @year))
                  
            = submit_tag 'Submit', class: 'button is-fullwidth is-primary'
        
  
    .tile.is-ancestor
      .columns.is-multiline
        = render partial: 'stat', locals: { stat: @registered, title: 'Clients Registered' }
        - OutcomeOption.all.each do |outcome|
          = render partial: 'stat', locals: { stat: instance_variable_get("@#{outcome.id}"), title: t("stats.titles.#{outcome.id}") }
