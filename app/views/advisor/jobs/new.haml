%section
  .head.level
    .level-left
      %h2= "Add a new job"
    .level-right
      =link_to "Back to all opportunities", advisor_opportunities_path, class: 'button pull-right top_right_button'
  %hr

  .opportunity_form
    = simple_form_for @job, url: advisor_jobs_path, local: true do |f|
      = f.input :title, :input_html => { :class => 'input' }
      = f.input :closing_date, as: :string, label: 'Closing date', input_html: {type: :date, class: 'input date_input', value: f.object.try(:end_date).try(:to_date)}, placeholder: "dd/mm/yyyy"
      = f.input :short_description, as: :text, label: 'Short description (max 400 characters)', input_html: { class: 'textarea', :maxlength => 400 }
      = f.input :pay, label: 'Pay', :input_html => { :class => 'input' }
      = f.input :location, label: 'Location', :input_html => { :class => 'input' }
      = f.input :contract, label: 'Contract', :input_html => { :class => 'input' }
      = f.input :sector, label: 'Sector', :input_html => { :class => 'input' }
      = f.input :full_description, as: :text, input_html: { class: 'textarea' }
      = f.submit "Add new job opportunity", :class => 'button is-primary tablet_cta'
