= render 'shared/form_errors', object: form.object
%fieldset
  = form.input :title, label: "Task title (update cv, attend training)", :input_html => { :class => "input" }

  = form.input :notes, as: :text, label: "Notes", :input_html => { :class => "textarea" }
  .convert_radio
    = form.input :advisor_id, as: :radio_buttons, label: "Task to be completed by:", collection: [['Client', ''], ['Advisor', current_advisor.id]]

  = form.input :client_id, as: :hidden
  = form.input :due_date, as: :string, input_html: {type: :date, :class => 'input', :value => form.object.try(:due_date).try(:to_date)}, placeholder: "dd/mm/yyyy"


.with_multi_select
  %label.label Attach an achievement
  %span.simple_input.buffer
    %select.select
      %option -
      %option CV complete
      %option Application sent
      %option Interview attended
      %option Training course
