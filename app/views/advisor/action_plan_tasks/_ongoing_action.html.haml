%tr.clickable_row[action_plan_task]{ class: action_plan_task.due_date < Time.zone.now ? 'overdue' : '', data: {"href" => edit_advisor_client_action_plan_task_path(client_id: client.id, id: action_plan_task.id)} }
  %td.task=action_plan_task.title
  %td=action_plan_task.created_at.to_date.to_s(:short)
  %td.due_date
    =fa_icon "exclamation-circle"
    =action_plan_task.due_date.to_date.to_s(:short)
  %td=action_plan_task.task_owner_name
  %td.has-text-right=button_to 'View details', edit_advisor_client_action_plan_task_path(client_id: client.id, id: action_plan_task.id), method: :get, class: "button is-primary is-small"
